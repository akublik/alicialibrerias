
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes to the 'epubs' directory
    match /epubs/{allPaths=**} {
      allow write;
    }

    // Allow writes to the 'covers' directory
    match /covers/{allPaths=**} {
      allow write;
    }
  }
}
