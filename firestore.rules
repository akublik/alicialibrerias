
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la colecci贸n 'notifications'
    // Permite que cualquier usuario (autenticado o no) cree (escriba) un nuevo
    // documento en la colecci贸n 'notifications'.
    // No se permite la lectura, actualizaci贸n o eliminaci贸n desde el cliente.
    match /notifications/{notificationId} {
      allow read, update, delete: if false;
      allow create: if true;
    }

    // Regla por defecto para el resto de las colecciones.
    // Deniega la lectura y escritura a menos que se especifique otra regla.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
